{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es5",
    "pretty": true,
    "removeComments": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
